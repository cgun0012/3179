{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 580,
  "config": {
    "background": "#f8fafc",
    "view": {"stroke": null},
    "axis": {"labelFont": "system-ui", "titleFont": "system-ui"}
  },
  "title": {
    "text": "Prevalence of Mental Illness (%) â€” Australia (2021)",
    "subtitle": "Share of people who report having a mental health condition",
    "anchor": "start",
    "fontSize": 18
  },
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "au_state.geojson"
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {"url": "mental_health_prevalence_au.csv"},
        "key": "state_name",
        "fields": ["prevalence_percent"]
      }
    },
    { "calculate": "toNumber(datum.prevalence_percent)", "as": "prevalence_percent" }
  ],
  "mark": {"type": "geoshape", "stroke": "#94a3b8", "strokeWidth": 0.6},
  "encoding": {
    "color": {
      "field": "prevalence_percent",
      "type": "quantitative",
      "title": "Prevalence (%)",
      "scale": {"scheme": "blues"},
      "legend": {"format": ".1f"}
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "State / Territory"},
      {"field": "prevalence_percent", "type": "quantitative", "title": "Prevalence (%)", "format": ".1f"}
    ]
  }
}
