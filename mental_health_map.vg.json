{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Prevalence of Diagnosed Mental Illness (%) â€” Australia (2021)",
  "projection": {"type": "mercator"},

  "layer": [
    {
      "data": { "graticule": { "step": [15,15], "extent": [[110,-46],[156,-8]] } },
      "mark": { "type": "geoshape", "stroke": "#d1d5db", "strokeWidth": 0.6, "fill": null }
    },
    {
      "data": {
        "url": "geoBoundaries-AUS-ADM1.topojson",
        "format": {"type":"topojson","feature":"AUSADM1gbOpen"}
      },
      "transform": [
        { "lookup": "properties.shapeName",
          "from": { "data": {"url":"mental_health_prevalence_au.csv"},
                    "key": "state_name",
                    "fields": ["prevalence_percent"] } },
        { "calculate": "toNumber(datum.prevalence_percent)", "as": "prevalence_percent" },
        { "filter": "isValid(datum.prevalence_percent)" }
      ],
      "mark": { "type": "geoshape", "stroke": "#94a3b8", "strokeWidth": 0.6 },
      "encoding": {
        "color": {
          "field": "prevalence_percent", "type": "quantitative",
          "title": "Prevalence (%)", "scale": {"scheme": "blues"},
          "legend": {"format": ".1f"}
        },
        "tooltip": [
          {"field":"properties.shapeName","title":"State / Territory"},
          {"field":"prevalence_percent","title":"Prevalence (%)","format":".1f"}
        ]
      }
    }
  ]
}
