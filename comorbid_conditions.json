{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text": "Coexisting Health Conditions by Mental Health Status"},
  "width": 200,
  "height": 200,
  "data": {"url": "prevalence_by_comorbid_conditions.csv"},
  "mark":"bar",
  "encoding": {
    "x": {
      "field": "sex",
      "type": "nominal",
      "axis": { "labelAngle": 0, "title": null }
    },
    "y": { "field": "percentage", "type": "quantitative", "title": "Percentage (%)" },
    "color": { "field": "sex", "type": "nominal", "title": "Sex" },
    "tooltip": [
      { "field": "sex", "title": "Sex" },
      { "field": "diseases", "title": "Disease" },
      { "field": "percentage", "title": "Percent", "format": ".2f" }
    ],
    "column": { "field": "diseases", "title": "Sex" }
  }
}